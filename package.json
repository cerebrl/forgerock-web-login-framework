{
  "name": "@forgerock/login-framework",
  "version": "0.0.1",
  "scripts": {
    "build": "npm run build:widget && npm run build:app",
    "build:app": "vite build",
    "build:dev:widget": "rollup -c",
    "build:dev:svelte-package": "svelte-package",
    "build:dev:types": "rollup -c ./rollup.types.config.js",
    "build:widget": "npm-run-all build:dev:*",
    "build:storybook": "storybook build --webpack-stats-json",
    "build:release": "npm-run-all build:release:*",
    "build:release:widget": "rollup -c",
    "build:release:package": "svelte-package",
    "build:release:types": "rollup -c ./rollup.types.config.js",
    "build:release:clean": "node ./.scripts/processTypes.mjs",
    "build:types": "npm run build:release:package & npm run build:release:types & npm run build:release:clean",
    "check": "npm run check:lint && npm run check:svelte",
    "check:lint": "prettier --ignore-path .gitignore -w --plugin-search-dir=. . && eslint --fix --ignore-path .gitignore .",
    "check:svelte": "svelte-check --tsconfig ./tsconfig.json --threshold=warning",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "chromatic": "chromatic --force-rebuild",
    "ci": "vitest --dir src",
    "ci:e2e": "playwright test",
    "ci:e2e:debug": "PWDEBUG=1 playwright test",
    "clean": "git clean -fdX -e \"!.env\"",
    "commit": "cz",
    "dev": "npm run build:widget && npm run dev:widget | npm run dev:app",
    "dev:app": "vite dev",
    "dev:style": "postcss --watch src/lib/widget/main.css --output package/widget.css",
    "dev:widget": "rollup -cw",
    "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
    "package": "svelte-package",
    "prepare": "is-ci || husky install",
    "preview": "vite preview",
    "storybook": "storybook dev --no-open -p 6006",
    "test": "vitest --dir src",
    "test:e2e": "npm run build && playwright test",
    "test:storybook": "test-storybook"
  },
  "dependencies": {
    "@forgerock/javascript-sdk": "^3.4.0",
    "uuid": "^9.0.0",
    "xss": "^1.0.14",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@babel/core": "^7.21.0",
    "@playwright/test": "^1.29.2",
    "@rollup/plugin-alias": "^4.0.2",
    "@rollup/plugin-commonjs": "^24.0.1",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-terser": "^0.4.0",
    "@rollup/plugin-typescript": "^9.0.2",
    "@semantic-release/changelog": "^6.0.2",
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "https://registry.npmjs.org/@achingbrain/semantic-release-github/-/semantic-release-github-0.0.0.tgz",
    "@semantic-release/npm": "^9.0.1",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "@storybook/addon-a11y": "^7.0.0-rc.3",
    "@storybook/addon-actions": "^7.0.0-rc.3",
    "@storybook/addon-essentials": "^7.0.0-rc.3",
    "@storybook/addon-interactions": "^7.0.0-rc.3",
    "@storybook/addon-links": "^7.0.0-rc.3",
    "@storybook/addon-mdx-gfm": "^7.0.0-rc.3",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/jest": "^0.0.11-next.0",
    "@storybook/svelte": "^7.0.0-rc.3",
    "@storybook/sveltekit": "^7.0.0-rc.3",
    "@storybook/test-runner": "^0.10.0-next.11",
    "@storybook/testing-library": "^0.0.14-next.1",
    "@storybook/theming": "^7.0.0-rc.3",
    "@sveltejs/adapter-auto": "^2.0.0",
    "@sveltejs/adapter-node": "^1.1.7",
    "@sveltejs/adapter-vercel": "^1.0.6",
    "@sveltejs/kit": "1.11.0",
    "@sveltejs/package": "^1.0.2",
    "@sveltejs/vite-plugin-svelte": "^2.0.2",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.51.0",
    "@vitejs/plugin-basic-ssl": "^0.1.2",
    "@vitest/ui": "^0.25.2",
    "autoprefixer": "^10.4.13",
    "babel-loader": "^9.1.2",
    "chromatic": "^6.17.0",
    "color": "^4.2.3",
    "commitizen": "^4.2.6",
    "concurrently": "^7.6.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-storybook": "^0.6.11",
    "eslint-plugin-svelte3": "^4.0.0",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "jest": "^29.4.2",
    "jest-playwright-preset": "^3.0.1",
    "lint-staged": "^13.1.0",
    "markdown-toc": "^1.2.0",
    "mdsvex": "^0.10.6",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.29.2",
    "postcss": "^8.4.19",
    "postcss-cli": "^10.1.0",
    "postcss-import": "^15.0.0",
    "prettier": "2.8.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remark-autolink-headings": "^7.0.1",
    "remark-slug": "^7.0.1",
    "rimraf": "3.0.2",
    "rollup": "^3.17.3",
    "rollup-plugin-dts": "^5.2.0",
    "rollup-plugin-license": "^3.0.1",
    "rollup-plugin-postcss": "4.0.2",
    "rollup-plugin-styles": "^4.0.0",
    "rollup-plugin-svelte": "^7.1.0",
    "semantic-release-slack-bot": "^3.5.3",
    "storybook": "^7.0.0-rc.3",
    "storybook-addon-code-editor": "^0.3.7",
    "storybook-dark-mode": "2.0.5",
    "svelte": "^3.55.1",
    "svelte-check": "^3.0.3",
    "svelte-dts": "^0.3.7",
    "svelte-loader": "^3.1.4",
    "svelte-preprocess": "^4.10.7",
    "svelte2tsx": "^0.6.2",
    "tailwindcss": "^3.2.4",
    "tslib": "^2.5.0",
    "typescript": "^4.9.3",
    "vite": "^4.0.4",
    "vite-plugin-turbosnap": "^1.0.1",
    "vitest": "^0.29.3"
  },
  "svelte": "../widget/modal.svelte",
  "type": "module",
  "engines": {
    "node": ">16.0.0 < 17.0.0 || ^18",
    "npm": ">=8.0.0"
  },
  "volta": {
    "node": "18.12.1"
  },
  "lint-staged": {
    "*.{js,svelte}": "eslint --cache --fix .",
    "*.{js,css,md,json}": "prettier --write --config .prettierrc",
    "*.svelte": "svelte-check --tsconfig ./tsconfig.json --threshold=warning"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cerebrl/forgerock-web-login-framework.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
